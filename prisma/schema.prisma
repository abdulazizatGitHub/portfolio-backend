// Prisma Schema for Portfolio Backend
// Phase 2: Comprehensive Database Models

generator client {
  provider = "prisma-client-js"
  output   = "../src/data/generated-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  ADMIN
  VIEWER
}

// User model for authentication and authorization
model User {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String   // Hashed with bcrypt
  name       String
  role       Role     @default(VIEWER)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([email])
  @@map("users")
}

// Category model for organizing projects
model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  slug        String    @unique
  description String?
  order_index Int       @default(0)
  deleted_at  DateTime?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  // Relations
  projects Project[]

  @@index([slug])
  @@index([order_index])
  @@map("categories")
}

// Skill model for technologies and tools
model Skill {
  id         String   @id @default(uuid())
  name       String   @unique
  slug       String   @unique
  icon_url   String?
  category   String?  // e.g., "Frontend", "Backend", "DevOps"
  level      Int      @default(0) // 0-100 percentage
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  project_skills ProjectSkill[]

  @@index([slug])
  @@map("skills")
}

// Project model for portfolio projects
model Project {
  id               String    @id @default(uuid())
  title            String
  description      String
  long_description String?   @db.Text
  demo_url         String?
  repo_url         String?
  featured         Boolean   @default(false)
  is_published     Boolean   @default(false)
  order_index      Int       @default(0)
  category_id      String
  deleted_at       DateTime?
  created_at       DateTime  @default(now())
  updated_at       DateTime  @updatedAt

  // Relations
  category       Category       @relation(fields: [category_id], references: [id], onDelete: Cascade)
  images         Image[]
  project_skills ProjectSkill[]

  @@index([is_published])
  @@index([featured])
  @@index([order_index])
  @@index([category_id])
  @@map("projects")
}

// Image model for project images
model Image {
  id           String   @id @default(uuid())
  project_id   String
  url          String
  alt_text     String?
  is_thumbnail Boolean  @default(false)
  order_index  Int      @default(0)
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  // Relations
  project Project @relation(fields: [project_id], references: [id], onDelete: Cascade)

  @@index([project_id])
  @@map("images")
}

// Join table for many-to-many relationship between Projects and Skills
model ProjectSkill {
  project_id String
  skill_id   String
  created_at DateTime @default(now())

  // Relations
  project Project @relation(fields: [project_id], references: [id], onDelete: Cascade)
  skill   Skill   @relation(fields: [skill_id], references: [id], onDelete: Cascade)

  @@id([project_id, skill_id])
  @@map("project_skills")
}

// ====================
// Personal Content
// ====================
model PersonalContent {
  id                String   @id @default(uuid())
  name              String
  title_prefix      String
  description       String   @db.Text
  profile_image_url String?  // Path to profile/hero image
  cv_file_path      String
  cv_download_name  String
  updated_at        DateTime @updatedAt

  @@map("personal_content")
}

model JobRole {
  id          String   @id @default(uuid())
  label       String
  order_index Int      @default(0)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@index([order_index])
  @@map("job_roles")
}

// ====================
// About Content
// ====================
model AboutContent {
  id                 String   @id @default(uuid())
  role_title         String
  heading_prefix     String   @default("About")
  heading_highlight  String   @default("Me")
  portrait_image_url String?  // Path to about portrait image
  updated_at         DateTime @updatedAt

  @@map("about_content")
}

model AboutParagraph {
  id          String   @id @default(uuid())
  content     String   @db.Text
  order_index Int      @default(0)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@index([order_index])
  @@map("about_paragraphs")
}

model Stat {
  id         String   @id @default(uuid())
  label      String
  value      String
  context    String   @default("about")
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([context])
  @@map("stats")
}

// ====================
// Education & Experience
// ====================
model EducationEntry {
  id          String   @id @default(uuid())
  period      String
  title       String
  description String   @db.Text
  order_index Int      @default(0)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@index([order_index])
  @@map("education_entries")
}

model ExperienceEntry {
  id          String   @id @default(uuid())
  period      String
  title       String
  description String   @db.Text
  order_index Int      @default(0)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@index([order_index])
  @@map("experience_entries")
}

// ====================
// Contact Content
// ====================
model ContactContent {
  id               String   @id @default(uuid())
  subtitle         String
  info_title       String   @default("Contact Information")
  info_description String   @default("Feel free to reach out to me through any of the following channels:")
  success_title    String
  success_message  String   @db.Text
  updated_at       DateTime @updatedAt

  @@map("contact_content")
}

model ContactInfoItem {
  id          String   @id @default(uuid())
  type        String   // 'email' | 'phone' | 'location'
  label       String
  value       String
  href        String?
  order_index Int      @default(0)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@index([order_index])
  @@map("contact_info_items")
}

model SocialLink {
  id          String   @id @default(uuid())
  platform    String
  url         String
  order_index Int      @default(0)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@index([order_index])
  @@map("social_links")
}
// ====================
// Analytics & Tracking
// ====================
model PageVisit {
  id         String   @id @default(uuid())
  path       String   // e.g., "/", "/projects/slug"
  ip_hash    String?  // For unique visitor tracking (anonymized)
  user_agent String?
  referer    String?
  device     String?  // 'mobile' | 'desktop' | 'tablet'
  browser    String?
  os         String?
  created_at DateTime @default(now())

  @@index([path])
  @@index([created_at])
  @@map("page_visits")
}

model EventLog {
  id         String   @id @default(uuid())
  event_type String   // e.g., "cv_download", "social_click"
  category   String?  // e.g., "engagement", "navigation"
  label      String?  // e.g., "LinkedIn", "Resume.pdf"
  metadata   Json?    // Flexible extra data
  created_at DateTime @default(now())

  @@index([event_type])
  @@index([created_at])
  @@map("event_logs")
}

// [NEW] ActivityLog for administrative actions
model ActivityLog {
  id          String   @id @default(uuid())
  user_id     String   // The admin who performed the action
  action      String   // e.g., "CREATE", "UPDATE", "DELETE", "PUBLISH"
  entity_type String   // e.g., "project", "skill", "experience"
  entity_id   String?
  entity_name String?  // e.g., "Laboratory Management System"
  description String   // Human readable description
  created_at  DateTime @default(now())

  @@index([user_id])
  @@index([created_at])
  @@map("activity_logs")
}
