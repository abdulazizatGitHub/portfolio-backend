// Prisma Schema for Portfolio Backend
// Phase 2: Comprehensive Database Models

generator client {
  provider = "prisma-client-js"
  output   = "../src/data/generated-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  ADMIN
  VIEWER
}

// User model for authentication and authorization
model User {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String   // Hashed with bcrypt
  name       String
  role       Role     @default(VIEWER)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([email])
  @@map("users")
}

// Category model for organizing projects
model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  slug        String    @unique
  description String?
  order_index Int       @default(0)
  deleted_at  DateTime?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  // Relations
  projects Project[]

  @@index([slug])
  @@index([order_index])
  @@map("categories")
}

// Skill model for technologies and tools
model Skill {
  id         String   @id @default(uuid())
  name       String   @unique
  slug       String   @unique
  icon_url   String?
  category   String?  // e.g., "Frontend", "Backend", "DevOps"
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  project_skills ProjectSkill[]

  @@index([slug])
  @@map("skills")
}

// Project model for portfolio projects
model Project {
  id               String    @id @default(uuid())
  title            String
  description      String
  long_description String?   @db.Text
  demo_url         String?
  repo_url         String?
  featured         Boolean   @default(false)
  is_published     Boolean   @default(false)
  order_index      Int       @default(0)
  category_id      String
  deleted_at       DateTime?
  created_at       DateTime  @default(now())
  updated_at       DateTime  @updatedAt

  // Relations
  category       Category       @relation(fields: [category_id], references: [id], onDelete: Cascade)
  images         Image[]
  project_skills ProjectSkill[]

  @@index([is_published])
  @@index([featured])
  @@index([order_index])
  @@index([category_id])
  @@map("projects")
}

// Image model for project images
model Image {
  id           String   @id @default(uuid())
  project_id   String
  url          String
  alt_text     String?
  is_thumbnail Boolean  @default(false)
  order_index  Int      @default(0)
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  // Relations
  project Project @relation(fields: [project_id], references: [id], onDelete: Cascade)

  @@index([project_id])
  @@map("images")
}

// Join table for many-to-many relationship between Projects and Skills
model ProjectSkill {
  project_id String
  skill_id   String
  created_at DateTime @default(now())

  // Relations
  project Project @relation(fields: [project_id], references: [id], onDelete: Cascade)
  skill   Skill   @relation(fields: [skill_id], references: [id], onDelete: Cascade)

  @@id([project_id, skill_id])
  @@map("project_skills")
}
