{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@api/*": [
                "src/api/*"
            ],
            "@core/*": [
                "src/core/*"
            ],
            "@data/*": [
                "src/data/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ]
        },
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}